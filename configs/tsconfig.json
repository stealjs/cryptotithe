{
    "compilerOptions": {
        "sourceMap": true,
        "moduleResolution": "node",
        "target": "ES2015",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [ 
            "es2015", 
            "dom" 
        ]
    },
    "include": [
        "../**/*"
    ],
    "exclude": [
        "../**/*.test.*"
    ]
}
